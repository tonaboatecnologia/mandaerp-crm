                const setorValue = record.data.setor[0];
                if (setorValue === 'Comércio' || setorValue === 'Saúde' || setorValue === 'Educação' || setorValue === 'Construção') {
                    document.querySelector(`input[name="setor"][value="${setorValue}"]`).checked = true;
